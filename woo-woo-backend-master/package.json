{
  "name": "the-unforgotten-ones",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./dist/bin/www.js",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "dev": "npm-run-all build start",
    "watch": "nodemon",
    "prod": "npm-run-all build start",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/register": "^7.13.16",
    "capitalize": "^2.0.3",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "express-rate-limit": "^5.2.6",
    "faker": "^5.5.3",
    "firebase": "^8.6.3",
    "firebase-admin": "^9.9.0",
    "helmet": "^4.6.0",
    "image-type": "^4.1.0",
    "jwt-decode": "^3.1.2",
    "moment-timezone": "^0.5.33",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7",
    "pg": "^8.6.0",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "sib-api-v3-sdk": "^8.2.1",
    "stripe": "^8.160.0",
    "timeslot-availability": "^1.0.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3"
  }
}
